{% if section.blocks != blank%}
<div class="full-section-brands">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
      <div id='wrap-brands'>
        <div class="text-center title">
          <h2>{{ section.settings.title | escape }}</h2>
        </div>
          <ul>
            {% for block in section.blocks %}
                <li class="text-center col-xs-6 {% if forloop.length == 4 %}col-sm-3{% else %} col-sm-4 {% endif %}">
                    {% capture image_max_width %}{{ block.settings.image_max_width }}x{% endcapture %}
                    <a href="{{block.settings.link}}">
                    <img src="{{ block.settings.image | img_url: '300x300' }}"
                         itemprop="logo"></a>
                </li>

            {% endfor %}
          </ul>
      </div>
    </div>
  </div>
</div>
</div>
{% endif %}


{% schema %}
  {
    "name": "Image Brands",
    "settings": [{
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Title Brands"
    }],
	
	"blocks": [
      {
        "type": "image",
        "name": "Image brands",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Slide link"
          }
        ]
      }
    ],
	"presets": [
      {
        "name": "Image Brands",
        "category": "Image",
      
	"blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]}
    ]
}
{% endschema %}

