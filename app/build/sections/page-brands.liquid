        "type": "image",
        "name": "Products brands",
        "settings": [
          {
            "type": "image_picker",
            "id": "title_image_brands",
            "label": "Tite image product brands"
          },
          {
            "type": "image_picker",
            "id": "image_products_brands",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "description_products_brands",
            "label": "Description product brands"
          },
          {
            "type": "url",
            "id": "button_products",
            "label": "See more products"
          }
        ]
      }
    ],
	"presets": [
      {
        "name": "Products Brands",
        "category": "Image",
      
	"blocks": [
        {
          "type": "image"
        },
        {
