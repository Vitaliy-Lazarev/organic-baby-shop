<div class="grid-view-item{% unless product.available %} product-price--sold-out grid-view-item--sold-out{% endunless %}">
  <div class="wrap-featured-img">
      <a class="grid-view-item__link" href="{{ product.url | within: collection }}">
        <img class="" src="{{ product.featured_image.src | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}">
      </a>
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
        <button id="AddToCart-product-template" type="submit"></button>
      </form> 
    </div>
  <a class="grid-view-item__link" href="{{ product.url | within: collection }}">
    <div class="h4 grid-view-item__title">{{ product.title }}</div>
    {% comment %}<div class="text-description">{{ product.description }}</div>{% endcomment %}
   {% comment %} {% if section.settings.show_vendor %}
      <div class="grid-view-item__vendor">{{ product.vendor }}</div>
    {% endif %}{% endcomment %}
    {% comment %}{% if section.settings.tags_enable %}
      <div class="grid-view-item__tag">
        
        {{ product.tags | handle }}


      </div>
    {% endif %}{% endcomment %}

          <p class='short-desc'>
              {% if product.metafields.c_f.short %}

                {{ product.metafields.c_f.short }}

              {% endif %}
          </p>

    <div class="grid-view-item__meta">
      {% include 'product-price' %}
    </div>
  </a>

</div>
