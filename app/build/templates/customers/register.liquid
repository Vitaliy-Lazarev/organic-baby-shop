<div class="page-width" id='page-register'>
  <div class="container">
    <div class="row">
        <div class="col-sm-12">
          <div class="breadcrumbs">
            {% include 'breadcrumbs' %}
          </div>
        </div>
      </div>
    <div class="row">

      <div class="col-sm-12">
        <div class="wrap-register-box">
        {% form 'create_customer' %}

          {{ form.errors | default_errors }}

          <input type="text" placeholder="{{ 'customer.register.first_name' | t }}" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>

          <input type="text" placeholder="{{ 'customer.register.last_name' | t }}" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

          <input type="email" placeholder="{{ 'customer.register.email' | t }}" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

          <input type="password" placeholder="{{ 'customer.register.password' | t }}" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
            
            <p class='text-center'>
              
              <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
            </p>

        {% endform %}
      </div>
      </div>
    </div>
  </div>
</div>
