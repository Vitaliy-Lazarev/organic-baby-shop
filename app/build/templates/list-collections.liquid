<div class="page-width">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="breadcrumbs {% if collection.description != '' %}collection-description{%endif%}">
                    {% include 'breadcrumbs' %}
                </div>
            </div>
        </div>
        <div class="row">
                {% for collection in collections %}
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                        {% include 'collection-grid-item' %}
                    </div>
                {% endfor %}
        </div>
    </div>
</div>

